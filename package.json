{
  "name": "music-motion",
  "version": "1.0.0",
  "description": "网易云音乐web-app with pwa",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "build:client": "webpack --render=server --watch --mode=production --config 'webpack.client.js'",
    "build:server": "webpack --render=server --watch --mode=production --config 'webpack.server.js'",
    "start:client": "webpack-dev-server --host 0.0.0.0 --mode=development  --hot --render=client  --config 'webpack.client.js'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mbaxszy7/music-motion.git"
  },
  "keywords": [
    "react-ssr",
    "网易云音乐",
    "pwa",
    "nodejs"
  ],
  "author": "frank yan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mbaxszy7/music-motion/issues"
  },
  "homepage": "https://github.com/mbaxszy7/music-motion#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-decorators": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@hot-loader/react-dom": "^16.11.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "core-js": "^3.6.1",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "clean-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "immer": "^5.1.0",
    "koa": "^2.11.0",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "prop-types": "^15.7.2",
    "quicklink": "^2.0.0-alpha",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-loadable": "^5.5.0",
    "react-placeholder": "^3.0.2",
    "react-redux": "^7.1.3",
    "react-router-config": "^5.1.1",
