    "react-spring": "^8.0.27",
    "react-use-gesture": "^7.0.0-beta.9",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.4.1",
    "styled-reset": "^4.0.8",
    "swr": "^0.1.16",
    "webpack": "^4.41.5",
    "webpack-node-externals": "^1.7.2"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 version",
      "not android <= 6",
      "not ie<=11",
      "not ie_mob<=11",
      "ios >= 11.3",
      "safari >= 10",
      "not op_mini all"
    ],
    "ssr": [
      "node 12"
    ]
  }
}
